-- Bảng bkap_account
CREATE TABLE bkap_account (
    name VARCHAR2(50) PRIMARY KEY,
    full_name NVARCHAR2(500) NOT NULL,
    password VARCHAR2(100) NOT NULL,
    gender NUMBER,
    phone VARCHAR2(20),
    email VARCHAR2(100),
    is_admin NUMBER(1) CHECK (is_admin IN (0, 1))
);

-- Bảng bkap_booking
CREATE TABLE bkap_booking (
    id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    account VARCHAR2(50) REFERENCES bkap_account(name),
    room_id NUMBER,
    booking_date DATE,
    check_in_date DATE,
    check_out_date DATE,
    service VARCHAR2(200),
    amount NUMBER,
    is_cancel NUMBER(1) CHECK (is_cancel IN (0, 1))
);

-- Bảng bkap_city
CREATE TABLE bkap_city (
    id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    name NVARCHAR2(100),
    description NVARCHAR2(200),
    url_image VARCHAR2(1000)
);

-- Bảng bkap_TYPE_HOTEL
CREATE TABLE bkap_type_hotel (
    id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    name NVARCHAR2(100),
    description NVARCHAR2(200),
    url_image VARCHAR2(1000)
);

-- Bảng bkap_HOTEL
CREATE TABLE bkap_hotel (
    id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    name NVARCHAR2(100),
    address NVARCHAR2(200),
    phone VARCHAR2(20),
    description NVARCHAR2(1000),
    near_sea NUMBER(1) CHECK (near_sea IN (0, 1)),
    evaluate NUMBER CHECK (evaluate >= 0 AND evaluate <= 5),
    city_id NUMBER REFERENCES bkap_city(id),
    type_hotel_id NUMBER REFERENCES bkap_type_hotel(id)
);

-- Bảng ROOM
CREATE TABLE bkap_room (
    id NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    name NVARCHAR2(100),
    area NUMBER,
    price NUMBER,
    amenities NVARCHAR2(500),
    description NVARCHAR2(1000),
    bed NUMBER,
    hotel_id NUMBER REFERENCES bkap_hotel(id)
);



